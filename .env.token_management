# Token Management Environment Variables Configuration
# Add these to your .env file for optimal Token management

# === Instagram Token Management ===
# 自動刷新 Token 的天數閾值（建議 7-14 天）
INSTAGRAM_TOKEN_REFRESH_THRESHOLD_DAYS=7

# Token 刷新最大重試次數
INSTAGRAM_MAX_RETRY_ATTEMPTS=3

# Instagram API 請求超時時間（秒）
INSTAGRAM_REQUEST_TIMEOUT=30

# Instagram Graph API 版本
INSTAGRAM_API_VERSION=v23.0

# === Facebook App Configuration ===
# 這些是必需的，用於 Instagram Token 驗證和刷新
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Instagram OAuth 重定向 URI
INSTAGRAM_REDIRECT_URI=http://localhost:3001/auth/instagram/callback

# === Token Health Monitoring ===
# 是否啟用 Token 健康監控警報
TOKEN_HEALTH_ALERTS_ENABLED=true

# 警報發送的最小間隔（小時）
TOKEN_HEALTH_ALERT_INTERVAL=24

# === Celery Configuration for Token Tasks ===
# Redis URL for Celery broker (used for background token tasks)
REDIS_URL=redis://localhost:6379/1

# === Logging Configuration ===
# Token 管理日誌級別
TOKEN_MANAGER_LOG_LEVEL=INFO

# 是否記錄 Token 驗證詳細信息
TOKEN_VALIDATION_VERBOSE_LOGGING=false

# === Advanced Settings ===
# Token 刷新時的並發限制
TOKEN_REFRESH_CONCURRENT_LIMIT=5

# 是否在系統啟動時自動檢查 Token
AUTO_CHECK_TOKENS_ON_STARTUP=true

# Token 狀態檢查的緩存時間（秒）
TOKEN_STATUS_CACHE_DURATION=300